<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>bin</id>
  <baseDirectory>/</baseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/main/resources/lang</directory>
      <outputDirectory>partimana-${project.version}/partimana/lang</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/resources</directory>
      <outputDirectory>partimana-${project.version}/config</outputDirectory>
      <includes>
        <include>log4j.*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/resources</directory>
      <outputDirectory>partimana-${project.version}</outputDirectory>
      <includes>
        <include>partimana.*</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>partimana-${project.version}/partimana/</outputDirectory>
      <useProjectArtifact>true</useProjectArtifact>
      <unpack>false</unpack>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>
</assembly>
